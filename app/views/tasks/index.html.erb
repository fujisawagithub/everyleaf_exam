<h1>Tasks</h1>
<p id="notice"><%= notice %></p>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>

<div class='contener'>
  <ul class='contener_search'>
    <li><%= form_with(scope: :task, url:tasks_path,local: true,method: :get) do |form| %></li>
    <li><%= form.label :title,'タスク名'%></li>
    <li><%= form.text_field :title%></li>
    <li><%= form.label :status,'ステータス'%></li>
    <li>
      <%= form.select :status, Task.statuses.keys,include_blank:"選択する" %>
    </li>
    <br>
    <li><%= form.submit 'Search'%></li>
    <%end%>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Deadline</th>
      <th>priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td class='task_row'><%= task.title %></td>
      <td><%= task.content %></td>
      <td class='date_row'><%= task.deadline %></td>
      <td><%= task.status%>
      <td><%= task.priority %></td>
      <td><%= link_to 'Show', task %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>