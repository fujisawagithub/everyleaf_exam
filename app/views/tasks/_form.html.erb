<%= form_with(model: task, local: true) do |form| %>
<% if task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(task.errors.count, "error") %> 入力内容を確認ください。</h2>

  <ul>
    <% task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="task_title">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>
<div class="task_content">
  <%= form.label :content %>
  <%= form.text_field :content %>
</div>
<div class="task_deadline">
  <%= form.label :deadline %>
  <%= form.date_field :deadline %>
</div>
<div class='task_priority'>
  <%= form.label :priority %>
  <%= form.select :priority, options_for_select(Task.priorities.keys), {prompt: "選択してください"}  %>
</div>
<div class="task_status">
  <%= form.label :status %>
  <%= form.select :status, options_for_select(Task.statuses.keys), {prompt: "選択してください"}  %>
</div>
<div class="task_labels">
  <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
</div>
<div class="actions">
  <%= form.submit :'登録' %>
</div>
<% end %>